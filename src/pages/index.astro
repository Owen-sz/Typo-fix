<Layout title="Welcome to tauOS">
  <Navbar pathname={Astro.url.pathname} client:load />

  <div class="mx-6 my-20">
    <div class="mx-auto max-w-5xl flex flex-col gap-20">
      <section class="flex items-center gap-12 justify-around">
        <div class="flex-1">
          <h1 class="font-bold text-5xl mb-4 dark:opacity-[92%]">
            Welcome to your next-generation operating system.
          </h1>

          <p class="mt-6 text-gray-800 dark:text-gray-300">
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Architecto
            dicta modi eligendi placeat non hic, et quia quisquam libero dolorem
            molestias.
          </p>

          <div class="flex mt-6 gap-4 items-center">
            <a
              href=""
              class="flex items-center gap-1 text-violet-700 dark:text-violet-300"
              >Learn More <ArrowRightIcon
                name="fa-solid:chevron-right"
                className="inline-block h-4"
              /></a
            >
            <a
              href=""
              class="flex items-center gap-1 text-violet-700 dark:text-violet-300"
              >Get involved <ArrowRightIcon
                name="fa-solid:chevron-right"
                className="inline-block h-4"
              /></a
            >
          </div>
        </div>

        <div class="flex-1 hidden lg:block">
          <Image
            src={overviewImage}
            alt="About tauOS"
            class="rounded-2xl hover:shadow-md transition-all bg-neutral-100 dark:bg-neutral-800 h-96"
          />
        </div>
      </section>

      <section class="flex items-center gap-12 flex-wrap-reverse">
        <div class="flex-1 flex-shrink">
          <Carousel
            client:load
            views={[
              {
                name: "Play",
                description: "An example gaming setup",
                image: "/carousel/play.webp",
              },
              {
                name: "Create",
                description: "A example creative setup",
                image: "/carousel/create.webp",
              },
              {
                name: "Develop",
                description: "",
                image: "/carousel/develop.webp",
              },
              {
                name: "Study",
                description: "An example study setup",
                image: "/carousel/study.webp",
              },
            ]}
          />
        </div>

        <div class="flex-1 items-center gap-12 justify-around">
          <h1 class="font-bold text-4xl dark:opacity-[92%]">
            For everything in the present, and the future.
          </h1>
          <h2 class="text-xl mt-2">You name it, we can run it</h2>
          <p class="mt-6 text-gray-800 dark:text-gray-300 [text-wrap:balance]">
